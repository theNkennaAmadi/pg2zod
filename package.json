{
  "name": "pg2zod",
  "version": "2.2.2",
  "type": "module",
  "description": "Introspect PostgreSQL databases and generate strict, comprehensive Zod v4 schemas with full type coverage",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pg-to-zod": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node --test dist/**/*.test.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "zod",
    "schema",
    "validation",
    "introspection",
    "database",
    "typescript",
    "codegen",
    "type-generation",
    "orm",
    "prisma-alternative"
  ],
  "author": "Nkenna Amadi (TBP Studio)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/theNkennaAmadi/pg2zod.git"
  },
  "bugs": {
    "url": "https://github.com/theNkennaAmadi/pg2zod/issues"
  },
  "homepage": "https://github.com/theNkennaAmadi/pg2zod#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "dependencies": {
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "tsdown": "^0.19.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
